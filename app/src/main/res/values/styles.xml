<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/colorBrightBlue</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Material.Dialog.NoActionBar.MinWidth">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="colorAccent">@color/colorBrightBlue</item>
    </style>

    <style name="EditTextInfo">
        <item name="android:maxLines">1</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:ems">10</item>
        <item name="android:textCursorDrawable">@android:color/black</item>
        <item name="android:colorControlNormal">@android:color/holo_green_light</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorPressedHighlight">@color/colorBrightBlue</item>
    </style>

</resources>
